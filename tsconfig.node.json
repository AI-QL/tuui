{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "composite": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/main",
    "src/types",
    "src/preload",
    "package.json",
    "vite.config.mts",
    "buildAssets/builder",
    "tests/**/*.ts",
    "tests/**/*.mts",
    "tests/**/*.spec.ts"
  ]
}
